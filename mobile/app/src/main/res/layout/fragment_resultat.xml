<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="38dp">


    <TextView
        android:id="@+id/resultat"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_horizontal"
        android:text="Результат"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <!-- Using CardView for CircularImageView -->
    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="327dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/resultImageView2"
            android:layout_width="327dp"
            android:layout_height="200dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text9"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="280dp"
        android:text="Адрес:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/zagolovok2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/text13"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="280dp"
        android:text="Район:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/zagolovok2"
        android:layout_width="380dp"
        android:layout_height="20dp"
        android:layout_below="@id/text9"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text13" />

    <TextView
        android:id="@+id/zagolovok"
        android:layout_width="380dp"
        android:layout_height="20dp"
        android:layout_below="@id/text9"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text9" />

    <TextView
        android:id="@+id/text10"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="280dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_vertical"
        android:text="Описание:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zagolovok"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/opisanie2"
        android:layout_width="380dp"
        android:layout_height="20dp"
        android:layout_below="@id/text9"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text10" />


    <TextView
        android:id="@+id/text11"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_vertical"
        android:text="Результат анализа:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opisanie2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rezultat"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_below="@id/text11"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sfprotext_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />


</androidx.constraintlayout.widget.ConstraintLayout>