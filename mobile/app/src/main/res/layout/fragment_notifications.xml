<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="38dp">


    <TextView
        android:id="@+id/text8"
        android:layout_width="392dp"
        android:layout_height="45dp"
        android:fontFamily="@font/sfprotext_bold"
        android:gravity="center_horizontal"
        android:text="Загрузка"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <!-- Using CardView for CircularImageView -->
    <androidx.cardview.widget.CardView
        android:layout_width="327dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="327dp"
            android:layout_height="200dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text9"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginRight="315dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="center_vertical"
        android:text="Адрес"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/Camera2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/text11"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginRight="315dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="center_vertical"
        android:text="Район"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/Camera3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/text10"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="315dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="center_vertical"
        android:text="Описание"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/opisanie"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp" />


    <EditText
        android:id="@+id/opisanie"
        style="@style/purpleButtonStyle2"
        android:layout_width="390dp"
        android:layout_height="95dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="top"
        android:hint="@string/camera_hint"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:textColor="@color/g_white"
        android:textColorHint="@color/g_gray700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Camera2"
        app:layout_constraintVertical_bias="0.251" />

    <AutoCompleteTextView
        android:id="@+id/Camera3"
        style="@style/purpleButtonStyle2"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="center_vertical"
        android:hint="@string/camera_hint"
        android:paddingLeft="16dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/g_white"
        android:textColorHint="@color/g_gray700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <AutoCompleteTextView
        android:id="@+id/Camera2"
        style="@style/purpleButtonStyle2"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="center_vertical"
        android:hint="Текст"
        android:paddingLeft="16dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/g_white"
        android:textColorHint="@color/g_gray700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/Camera3"
        app:layout_constraintVertical_bias="0.135" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zagruzit"
        style="@style/purpleButtonStyle"
        android:layout_width="319dp"
        android:layout_height="57dp"
        android:fontFamily="@font/sfprotext_bold"
        android:text="Загрузить"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/opisanie"
        app:layout_constraintStart_toStartOf="@+id/opisanie"
        app:layout_constraintTop_toBottomOf="@+id/opisanie"
        app:layout_constraintVertical_bias="0.455" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEllipseBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />


</androidx.constraintlayout.widget.ConstraintLayout>